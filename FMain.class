PUBLIC SUB ShowTabStrip(ntab AS Integer)
  DIM i AS Integer
  FOR i = 0 TO 5 STEP 1
    IF TabStrip1[i].Visible = TRUE THEN 
      TabStrip1[i].Visible = FALSE
    ENDIF 
  NEXT 
  TabStrip1[ntab].Visible = TRUE  
END

